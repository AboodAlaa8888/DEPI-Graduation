@model WebUI.ViewModels.RoleViewModel
@{
    ViewData["Title"] = "Delete Role";
}

<h2>Delete Role</h2>

<hr />
<h4>Are you sure you want to delete this role?</h4>

<div class="card p-3 mb-3">
    <p><strong>Name:</strong> @Model.Name</p>
</div>

<form asp-controller="Role" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Role" asp-action="Index" class="btn btn-secondary">
        Cancel
    </a>
</form>
