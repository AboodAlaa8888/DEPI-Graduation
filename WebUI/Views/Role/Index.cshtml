@model IEnumerable<WebUI.ViewModels.RoleViewModel>
@{
    ViewData["Title"] = "Roles List";
}

<div class="page-header">
    <h2>Roles List</h2>
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
    }
    <a asp-controller="Role" asp-action="Create" class="btn btn-success">
        Create New
    </a>
</div>

<hr />
<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Role Id</th>
            <th>Role Name</th>
            <th colspan="3" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><a asp-controller="Role" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a></td>
                    <td><a asp-controller="Role" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">
                    No Roles found.
                </td>
            </tr>
        }
    </tbody>
</table>

