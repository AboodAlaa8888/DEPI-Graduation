@model WebUI.ViewModels.RoleViewModel
@{
	ViewData["Title"] = "Edit Role";
}

<h2>Edit Role</h2>

<hr />
<form asp-controller="Role" asp-action="Edit" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	@Html.AntiForgeryToken()
	<input asp-for="Id" type="hidden" />
	<partial name="/Views/Role/_RoleFormPartial.cshtml" model="Model" />
	<a asp-action="AddOrRemoveUser" asp-route-roleId="@Model.Id" asp-controller="Role"
	   class="btn btn-success px-4 shadow-sm">
		<i class="bi bi-person-gear me-1"></i> Add or Remove User
	</a>
	<button type="submit" class="btn btn-success">Save</button>
	<a asp-controller="Role" asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
