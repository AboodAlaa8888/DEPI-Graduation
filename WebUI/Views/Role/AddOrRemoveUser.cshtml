@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUser";
    var RoleId = ViewData["RoleId"] as string;
}

<div class="container mt-4">
    <h2>Manage Users in Role</h2>

    <form asp-action="AddOrRemoveUser" asp-route-roleId="@RoleId">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Select</th>
                    <th>User Name</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        </td>
                        <td>
                            @Model[i].UserName
                            <input type="hidden" asp-for="@Model[i].UserId" />
                            <input type="hidden" asp-for="@Model[i].UserName" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <input type="submit" value="Update" class="btn btn-success me-2" />
            <a asp-action="Edit" asp-route-id="@RoleId" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>