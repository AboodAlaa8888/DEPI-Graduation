@model List<WebUI.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "My Orders";
    var patientName = ViewBag.PatientName;
    var patientId = ViewBag.PatientId;
}

<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
            <h2 class="page-title mb-2">
                <i class="bi bi-list-check me-2"></i>My Orders
            </h2>
            <p class="page-subtitle mb-0">View and manage all your orders</p>
        </div>
        <a href="@Url.Action("Profile", "User")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Profile
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="content-container">
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th><i class="bi bi-calendar me-1"></i>Order Date</th>
                        <th><i class="bi bi-clock me-1"></i>Time</th>
                        <th><i class="bi bi-hourglass-split me-1"></i>Duration</th>
                        <th><i class="bi bi-geo-alt me-1"></i>Address</th>
                        <th><i class="bi bi-person me-1"></i>Patient Age</th>
                        <th><i class="bi bi-info-circle me-1"></i>Status</th>
                        <th class="text-center"><i class="bi bi-gear me-1"></i>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>
                                <strong>@order.OrderDate.ToString("MMM dd, yyyy")</strong>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@order.OrderDate.ToString("HH:mm")</span>
                            </td>
                            <td>
                                <span class="badge bg-info">@order.Duration hours</span>
                            </td>
                            <td>@order.Address</td>
                            <td>@order.PatientAge</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(order.Status)">@order.Status</span>
                            </td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    @if (order.Status == Core.Models.OrderStatus.Pending)
                                    {
                                        <a asp-controller="User" asp-action="EditOrder" asp-route-id="@order.Id" 
                                           class="btn btn-sm btn-warning" title="Edit Order">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-controller="User" asp-action="DeleteOrder" asp-route-id="@order.Id" 
                                              method="post" class="d-inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this order?');">
                                            <button type="submit" class="btn btn-sm btn-danger" title="Delete Order">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    }
                                    else if (order.Status == Core.Models.OrderStatus.Confirmed)
                                    {
                                        <a asp-controller="Order" asp-action="PayOrder" asp-route-orderId="@order.Id" 
                                           class="btn btn-sm btn-success" title="Pay Now">
                                            <i class="bi bi-credit-card me-1"></i>Pay Now
                                        </a>
                                        <a asp-controller="User" asp-action="EditOrder" asp-route-id="@order.Id" 
                                           class="btn btn-sm btn-warning" title="Edit Order">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">No actions available</span>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-4 p-3 bg-light rounded">
            <p class="mb-0">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Total Orders:</strong> <span class="badge bg-primary">@Model.Count</span>
            </p>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem; color: #dee2e6;"></i>
            <h5 class="text-muted mt-3">No Orders Found</h5>
            <p class="text-muted mb-4">You haven't made any orders yet.</p>
            <a href="@Url.Action("ShowNurses", "User")" class="btn btn-primary">
                <i class="bi bi-search me-2"></i>Browse Nurses
            </a>
        </div>
    }
</div>

@functions {
    public string GetStatusBadgeClass(Core.Models.OrderStatus status)
    {
        return status switch
        {
            Core.Models.OrderStatus.Pending => "bg-warning text-dark",
            Core.Models.OrderStatus.Confirmed => "bg-info",
            Core.Models.OrderStatus.InProgress => "bg-primary",
            Core.Models.OrderStatus.Completed => "bg-success",
            Core.Models.OrderStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
