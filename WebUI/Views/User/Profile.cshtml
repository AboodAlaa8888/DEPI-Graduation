@model WebUI.ViewModels.PatientViewModel

@{
    ViewData["Title"] = "Patient Profile";
    var patient = Model;
    var ordersCount = patient?.Orders?.Count ?? 0;
    var hasOrders = ordersCount > 0;
}

@if (patient == null)
{
    <div class="container my-5">
        <div class="alert alert-danger shadow-sm">
            <h4 class="alert-heading">
                <i class="bi bi-exclamation-triangle me-2"></i>Patient Not Found
            </h4>
            <p>The requested patient could not be found.</p>
            <hr>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                <i class="bi bi-house me-2"></i>Go to Home
            </a>
        </div>
    </div>
}
else
{
    <div class="page-header mb-4">
        <h2 class="page-title">
            <i class="bi bi-person-circle me-2"></i>My Profile
        </h2>
        <p class="page-subtitle">View and manage your profile information</p>
    </div>

    <div class="row g-4">
        <!-- Left Card: Profile Information -->
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="avatar-large mb-3">
                            <i class="bi bi-person-fill"></i>
                        </div>
                        <h4 class="fw-bold">@patient.FullName</h4>
                        <p class="text-muted mb-0">
                            <i class="bi bi-envelope me-1"></i>@patient.Email
                        </p>
                    </div>

                    <div class="border-top pt-4">
                        <h6 class="fw-bold mb-3 text-primary">
                            <i class="bi bi-person-vcard me-2"></i>Personal Information
                        </h6>
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="info-item">
                                    <small class="text-muted d-block">Age</small>
                                    <strong>@patient.Age</strong>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="info-item">
                                    <small class="text-muted d-block">Gender</small>
                                    <strong>@patient.Gender</strong>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="info-item">
                                    <small class="text-muted d-block">
                                        <i class="bi bi-telephone me-1"></i>Phone
                                    </small>
                                    <strong>@patient.PhoneNumber</strong>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="info-item">
                                    <small class="text-muted d-block">
                                        <i class="bi bi-geo-alt me-1"></i>Address
                                    </small>
                                    <strong>@patient.Address</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Card: Orders -->
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 h-100">
                <div class="card-header">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-list-check me-2"></i>Order Details
                        @if (hasOrders)
                        {
                            <span class="badge bg-light text-dark ms-2">@ordersCount orders</span>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    @if (hasOrders)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th><i class="bi bi-calendar me-1"></i>Order Date</th>
                                        <th><i class="bi bi-clock me-1"></i>Duration</th>
                                        <th><i class="bi bi-geo-alt me-1"></i>Address</th>
                                        <th><i class="bi bi-info-circle me-1"></i>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in patient.Orders.Take(5))
                                    {
                                        <tr>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="badge bg-info">@order.Duration hours</span>
                                            </td>
                                            <td>@order.Address</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(order.Status)">@order.Status</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox" style="font-size: 3rem; color: #dee2e6;"></i>
                            <p class="text-muted mt-3 mb-0">No orders found.</p>
                        </div>
                    }

                    <div class="mt-4">
                        <a href="@Url.Action("PatientOrders", "User")"
                           class="btn btn-primary w-100">
                            <i class="bi bi-list-ul me-2"></i>View All Orders (@ordersCount)
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@functions {
    public string GetStatusBadgeClass(Core.Models.OrderStatus status)
    {
        return status switch
        {
            Core.Models.OrderStatus.Pending => "bg-warning text-dark",
            Core.Models.OrderStatus.Confirmed => "bg-info",
            Core.Models.OrderStatus.InProgress => "bg-primary",
            Core.Models.OrderStatus.Completed => "bg-success",
            Core.Models.OrderStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

<style>
    .avatar-large {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--user-color) 0%, #4169e1 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 3rem;
        margin: 0 auto;
    }
    
    .info-item {
        padding: 0.75rem;
        background-color: #f8f9fa;
        border-radius: var(--radius);
        margin-bottom: 0.5rem;
    }
</style>
