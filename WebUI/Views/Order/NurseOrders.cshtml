@model IEnumerable<Core.Models.Order>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="bi bi-calendar-check"></i> Incoming Schedule</h2>
        <span class="badge bg-primary fs-6">Total Jobs: @Model.Count()</span>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            <h4>No upcoming appointments scheduled yet.</h4>
            <p>Relax! You will be notified when a patient books you.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-header bg-white border-bottom-0 pt-3">
                            <div class="d-flex justify-content-between">
                                <span class="badge @(order.Status.ToString() == "Approved" ? "bg-success" : "bg-warning text-dark")">
                                    @order.Status
                                </span>
                                <small class="text-muted">@order.OrderDate.ToString("MMM dd")</small>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fw-bold"><i class="bi bi-person-circle text-secondary me-2"></i>Patient ID: @order.PatientId.Substring(0, 5)...</h5>
                            <p class="card-text text-muted mb-2">
                                <i class="bi bi-geo-alt-fill text-danger"></i> @order.Address
                            </p>
                            <p class="card-text">
                                <strong>Date:</strong> @order.OrderDate.ToString("g") <br />
                                <strong>Duration:</strong> @order.Duration Hours <br />
                                <strong>Details:</strong> @order.Description
                            </p>
                        </div>
                        <div class="card-footer bg-white border-top-0 pb-3">
                            <div class="d-grid">
                                <!-- Future Feature: Button to Mark as Completed -->
                                <button class="btn btn-outline-success">Mark as Completed</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>