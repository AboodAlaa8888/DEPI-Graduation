@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero-section mb-5">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-6">
                <div class="hero-content fade-in">
                    <h1 class="display-4 fw-bold mb-4 text-gradient">
                        <i class="bi bi-heart-pulse-fill me-3"></i>Professional Nursing Services
                    </h1>
                    <p class="lead mb-4 text-muted">
                        Connect with experienced and certified nurses for quality healthcare services at your doorstep.
                        We provide compassionate care when you need it most.
                    </p>
                    <div class="d-flex gap-3 flex-wrap">
                        <!-- Check if user is logged in to show appropriate buttons -->
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                                <i class="bi bi-person-plus me-2"></i>Get Started
                            </a>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Login
                            </a>
                        }
                        else
                        {
                            <a asp-controller="User" asp-action="ShowNurses" class="btn btn-primary btn-lg">
                                <i class="bi bi-calendar-check me-2"></i>Book a Nurse
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-image">
                    <i class="bi bi-heart-pulse" style="font-size: 15rem; color: var(--primary-color); opacity: 0.1;"></i>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Features Section -->
<section class="features-section mb-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold mb-3">Why Choose Us?</h2>
            <p class="text-muted lead">We provide exceptional nursing care services</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-shield-check" style="font-size: 3rem; color: var(--success-color);"></i>
                        </div>
                        <h5 class="card-title fw-bold">Certified Nurses</h5>
                        <p class="card-text text-muted">
                            All our nurses are certified professionals with years of experience in healthcare.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-clock-history" style="font-size: 3rem; color: var(--info-color);"></i>
                        </div>
                        <h5 class="card-title fw-bold">24/7 Availability</h5>
                        <p class="card-text text-muted">
                            Round-the-clock service availability to meet your healthcare needs anytime.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-house-heart" style="font-size: 3rem; color: var(--nurse-color);"></i>
                        </div>
                        <h5 class="card-title fw-bold">Home Care</h5>
                        <p class="card-text text-muted">
                            Professional nursing care delivered right to your home for your comfort.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="services-section mb-5">
    <div class="container">
        <div class="content-container">
            <div class="text-center mb-4">
                <h2 class="fw-bold mb-3">Our Services</h2>
                <p class="text-muted">Comprehensive healthcare solutions</p>
            </div>
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="d-flex align-items-start p-3 bg-light rounded">
                        <i class="bi bi-check-circle-fill text-success me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="fw-bold mb-1">Medical Care</h6>
                            <p class="mb-0 text-muted small">Professional medical assistance and care</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-start p-3 bg-light rounded">
                        <i class="bi bi-check-circle-fill text-success me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="fw-bold mb-1">Patient Monitoring</h6>
                            <p class="mb-0 text-muted small">Continuous monitoring and support</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-start p-3 bg-light rounded">
                        <i class="bi bi-check-circle-fill text-success me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="fw-bold mb-1">Medication Management</h6>
                            <p class="mb-0 text-muted small">Expert medication administration</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-start p-3 bg-light rounded">
                        <i class="bi bi-check-circle-fill text-success me-3" style="font-size: 1.5rem;"></i>
                        <div>
                            <h6 class="fw-bold mb-1">Health Consultation</h6>
                            <p class="mb-0 text-muted small">Professional health advice and guidance</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-section {
        padding: 4rem 0;
    }

    .min-vh-50 {
        min-height: 50vh;
    }

    .feature-icon {
        transition: transform 0.3s ease;
    }

    .card:hover .feature-icon {
        transform: scale(1.1);
    }

    /* New hover effect for nurse cards */
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
</style>