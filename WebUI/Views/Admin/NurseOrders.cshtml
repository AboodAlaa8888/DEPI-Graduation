@model List<WebUI.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "Nurse Orders";
    var nurseName = ViewBag.NurseName;
    var nurseId = ViewBag.NurseId;
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Orders for @nurseName</h2>
        <div class="d-flex gap-2">
           
            <a href="@Url.Action("Details", "Nurse", new { id = nurseId })" class="btn btn-outline-secondary">
                ← Back to Profile
            </a>
        </div>
    </div>

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="bg-light">
                            <tr>
                                <th>Order Date</th>
                                <th>Duration</th>
                                <th>Address</th>
                                <th>Patient Age</th>
                                <th>Status</th>
                             
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                    <td>@order.Duration</td>
                                    <td>@order.Address</td>
                                    <td>@order.PatientAge</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(order.Status)">@order.Status</span>
                                    </td>
                                    <td>
                                        <a asp-controller="Nurse" asp-action="ShowOrder" asp-route-id="@order.Id" class="btn btn-primary btn-sm">View</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p class="text-muted">Total Orders: <strong>@Model.Count</strong></p>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No Orders Found</h5>
                    <p class="text-muted mb-4">This nurse doesn't have any orders yet.</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(Core.Models.OrderStatus status)
    {
        return status switch
        {
            Core.Models.OrderStatus.Pending => "bg-warning",
            Core.Models.OrderStatus.Confirmed => "bg-info",
            Core.Models.OrderStatus.InProgress => "bg-primary",
            Core.Models.OrderStatus.Completed => "bg-success",
            Core.Models.OrderStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}