@model IEnumerable<WebUI.ViewModels.NurseViewModel>
@{
    ViewData["Title"] = "Nurses List";
}

<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h2 class="page-title mb-2">
                <i class="bi bi-people me-2"></i>Nurses Management
            </h2>
            <p class="page-subtitle mb-0">Manage and view all registered nurses</p>
        </div>
        <a asp-controller="Nurse" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus me-2"></i>Add New Nurse
        </a>
    </div>
</div>

<div class="search-filter-section">
    <h5 class="mb-3 fw-bold">
        <i class="bi bi-funnel me-2"></i>Search & Filter
    </h5>
    <form asp-controller="Nurse" asp-action="Index" method="get" class="row g-3">
        <div class="col-md-5">
            <label class="form-label fw-semibold">Search by Name</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" name="searchString" class="form-control"
                       placeholder="Enter nurse name..." value="@ViewBag.SearchString" />
            </div>
        </div>
        <div class="col-md-4">
            <label class="form-label fw-semibold">Filter by Gender</label>
            <select name="filterGender" asp-items="ViewBag.Genders" class="form-select">
                <option value="">-- All Genders --</option>
            </select>
        </div>
        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-success w-100">
                <i class="bi bi-search me-2"></i>Apply Filters
            </button>
        </div>
    </form>
</div>

<div class="content-container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0 fw-bold">
            <i class="bi bi-list-ul me-2"></i>Nurses List
        </h5>
        <div class="bg-white border rounded-3 shadow-sm p-2">
            <h6 class="mb-2 text-muted fw-semibold small">Sort Options</h6>
            <div class="d-flex gap-2">
                <a asp-controller="Nurse" asp-action="SortAscending"
                   class="btn btn-sm btn-primary">
                    <i class="bi bi-sort-alpha-down me-1"></i>Asc
                </a>
                <a asp-controller="Nurse" asp-action="SortDescending"
                   class="btn btn-sm btn-secondary">
                    <i class="bi bi-sort-alpha-up me-1"></i>Desc
                </a>
                <a asp-controller="Nurse" asp-action="Index"
                   class="btn btn-sm btn-outline-dark">
                    <i class="bi bi-arrow-counterclockwise me-1"></i>Reset
                </a>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th><i class="bi bi-person me-1"></i>Name</th>
                    <th><i class="bi bi-calendar me-1"></i>Age</th>
                    <th><i class="bi bi-briefcase me-1"></i>Experience</th>
                    <th><i class="bi bi-geo-alt me-1"></i>Address</th>
                    <th><i class="bi bi-gender-ambiguous me-1"></i>Gender</th>
                    <th class="text-center"><i class="bi bi-gear me-1"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-2">
                                        <i class="bi bi-person-fill"></i>
                                    </div>
                                    <strong>@item.FullName</strong>
                                </div>
                            </td>
                            <td>@item.Age</td>
                            <td>
                                <span class="badge bg-info">@item.Experience_years years</span>
                            </td>
                            <td>@item.Address</td>
                            <td>
                                <span class="badge bg-secondary">@item.Gender</span>
                            </td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-controller="Nurse" asp-action="Details" asp-route-id="@item.Id" 
                                       class="btn btn-sm btn-info" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-controller="Nurse" asp-action="Edit" asp-route-id="@item.Id" 
                                       class="btn btn-sm btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-controller="Nurse" asp-action="Delete" asp-route-id="@item.Id" 
                                       class="btn btn-sm btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-5">
                            <i class="bi bi-inbox" style="font-size: 3rem; color: #dee2e6;"></i>
                            <p class="text-muted mt-3 mb-0">No nurses found.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (ViewBag.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-controller="Nurse"
                               asp-action="Index"
                               asp-route-searchString="@ViewBag.SearchString"
                               asp-route-filterGender="@ViewBag.filterGender"
                               asp-route-pageNumber="@i">
                                @i
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .avatar-circle {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--primary-color) 0%, #0056b3 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1rem;
    }
</style>
