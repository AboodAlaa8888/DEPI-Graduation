@model WebUI.ViewModels.NurseViewModel
@{
    ViewData["Title"] = "Delete Nurse";
}

<div class="page-header mb-4">
    <h2 class="page-title text-danger">
        <i class="bi bi-exclamation-triangle me-2"></i>Delete Nurse
    </h2>
    <p class="page-subtitle">Confirm deletion of nurse record</p>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="alert alert-danger shadow-sm" role="alert">
            <h4 class="alert-heading">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>Warning!
            </h4>
            <p class="mb-0">Are you sure you want to delete this nurse? This action cannot be undone.</p>
        </div>

        <div class="card shadow-lg border-0">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-person-x me-2"></i>Nurse Information
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <i class="bi bi-person-fill text-primary me-3" style="font-size: 1.5rem;"></i>
                            <div>
                                <small class="text-muted d-block">Full Name</small>
                                <strong>@Model.FullName</strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <i class="bi bi-calendar text-primary me-3" style="font-size: 1.5rem;"></i>
                            <div>
                                <small class="text-muted d-block">Age</small>
                                <strong>@Model.Age</strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <i class="bi bi-briefcase text-primary me-3" style="font-size: 1.5rem;"></i>
                            <div>
                                <small class="text-muted d-block">Experience</small>
                                <strong>@Model.Experience_years years</strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center p-3 bg-light rounded">
                            <i class="bi bi-gender-ambiguous text-primary me-3" style="font-size: 1.5rem;"></i>
                            <div>
                                <small class="text-muted d-block">Gender</small>
                                <strong>@Model.Gender</strong>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="d-flex align-items-start p-3 bg-light rounded">
                            <i class="bi bi-geo-alt text-primary me-3 mt-1" style="font-size: 1.5rem;"></i>
                            <div>
                                <small class="text-muted d-block">Address</small>
                                <strong>@Model.Address</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <form asp-controller="Nurse" asp-action="Delete" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input asp-for="Id" type="hidden" />
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a asp-controller="Nurse" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-2"></i>Delete Nurse
                </button>
            </div>
        </form>
    </div>
</div>
